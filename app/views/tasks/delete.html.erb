<%= link_to 'Back to List', tasks_path, class: "back-link" %> <br />

<div class="tasks delete">
  <h2>Delete Task</h2>

  <%= form_for(@task, method: "delete") do |f| %>
    <p>Are you sure you want to delete this task?</p>
    <p><%= @task.name %></p>

    <div class="form-actions">
      <%= f.submit "Delete Task" %>
    </div>
  <% end %>
</div>
